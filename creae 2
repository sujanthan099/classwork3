#include <stdio.h>

// Function to calculate diameter of circle

float calcDiameter(float radius) {

    return 2 * radius;

}

// Function to calculate circumference of circle

float calcCircumference(float radius) {

    return 2 * 3.14159 * radius;

}

// Function to calculate area of circle

float calcArea(float radius) {

    return 3.14159 * radius * radius;

}

int main() {

    float radius, diameter, circumference, area;

    // Prompt user to enter radius of circle

    printf("Enter radius of circle: ");

    scanf("%f", &radius);

    // Calculate diameter, circumference, and area of circle using functions

    diameter = calcDiameter(radius);

    circumference = calcCircumference(radius);

    area = calcArea(radius);

    // Display results

    printf("Diameter of circle = %.2f\n", diameter);

    printf("Circumference of circle = %.2f\n", circumference);

    printf("Area of circle = %.2f\n", area);

    return 0;

}
